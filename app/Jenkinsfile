pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "My-flask-app:${BUILD_TAG}"  // Dynamic image name using build tag or branch
    }

    stages {
        stage('Clone Repository') {
            steps {
                
               git branch: 'main', url:'https://github.com/ShrutiBhapkar/Devops-projects.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image with the dynamic tag
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Login to Docker Hub and push the image
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh "echo $DOCKER_PASSWORD | docker login --username $DOCKER_USERNAME --password-stdin"
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Replace the placeholder in the deployment.yaml with the dynamic image name
                    sh "sed 's|{{IMAGE_NAME}}|${DOCKER_IMAGE}|g' k8s/deployment.yaml > k8s/deployment-temp.yaml"
                    
                    // Deploy to Kubernetes using the modified deployment file
                    sh 'kubectl apply -f k8s/deployment-temp.yaml'

                    // Clean up the temporary file after deployment
                    sh 'rm k8s/deployment-temp.yaml'
                }
            }
        }
    }
}
